---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  id="contact"
  class="pt-32 flex scroll-mt-32 flex-col items-center px-4 md:mx-20 md:px-20"
>
  <h2 class="text-center text-4xl text-primary lg:text-6xl">
    {t("contact.title")}
  </h2>
  <p class="mt-4 w-full pb-4 text-center text-lg text-secondary lg:mt-10">
    {t("contact.firstParagraph")}
    <span class="block font-bold">{t("contact.secondParagraph")}</span>
  </p>
  <ul class="mt-12 flex w-full list-none flex-col items-center justify-evenly gap-y-2 lg:flex-row lg:gap-y-0">
    <li>
      <p class="flex items-center text-xs text-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-3 h-3 mr-1">
          <path d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z" />
          <path d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z" />
        </svg>
        Email
      </p>
      <p class="text-lg text-primary">
        <a href="mailto:development@mechanikoi.com.ar" target="_blank">
          development@mechanikoi.com.ar
        </a>
      </p>
    </li>
    <li>
      <p class="flex items-center text-xs text-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-3 h-3 mr-1">
          <path fill-rule="evenodd" d="M1.5 4.5a3 3 0 013-3h1.372c.86 0 1.61.586 1.819 1.42l1.105 4.423a1.875 1.875 0 01-.694 1.955l-1.293.97c-.135.101-.164.249-.126.352a11.285 11.285 0 006.697 6.697c.103.038.25.009.352-.126l.97-1.293a1.875 1.875 0 011.955-.694l4.423 1.105c.834.209 1.42.959 1.42 1.82V19.5a3 3 0 01-3 3h-2.25C8.552 22.5 1.5 15.448 1.5 6.75V4.5z" clip-rule="evenodd" />
        </svg>
        {t("contact.phoneText")}
      </p>
      <p class="text-lg text-primary">+54 9 11 2607-2084</p>
    </li>
    <li>
      <p class="flex items-center text-xs text-secondary">
        <svg 
          viewBox="0 0 20 20" 
          aria-hidden="true" 
          class="h-3 w-3 fill-secondary mr-1"
        >
          <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0 0 20 3.92a8.19 8.19 0 0 1-2.357.646 4.118 4.118 0 0 0 1.804-2.27 8.224 8.224 0 0 1-2.605.996 4.107 4.107 0 0 0-6.993 3.743 11.65 11.65 0 0 1-8.457-4.287 4.106 4.106 0 0 0 1.27 5.477A4.073 4.073 0 0 1 .8 7.713v.052a4.105 4.105 0 0 0 3.292 4.022 4.095 4.095 0 0 1-1.853.07 4.108 4.108 0 0 0 3.834 2.85A8.233 8.233 0 0 1 0 16.407a11.615 11.615 0 0 0 6.29 1.84">
          </path>
        </svg>
        Twitter
      </p>
        <a class="text-lg text-primary" href="https://twitter.com/MechanikoiGames" target="_blank">
          @MechanikoiGames
        </a>
    </li>
  </ul>
</section>