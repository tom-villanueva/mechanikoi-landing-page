---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  id="contact"
  class="h-[80vh] flex scroll-mt-32 flex-col lg:flex-row items-center justify-evenly px-4 md:mx-20 md:px-20"
>
  <div class="flex flex-col md:px-12">
    <h2 class="text-center text-4xl md:pl-4 pt-2 text-primary lg:text-6xl border-primary border-l-2 border-t-2">
      {t("contact.title")}
    </h2>
    <p class="mt-4 w-full pb-4 text-center text-lg text-secondary lg:mt-10">
      {t("contact.firstParagraph")}
      <span class="block font-bold">{t("contact.secondParagraph")}</span>
    </p>
  </div>
  <ul class="lg:mt-12 flex w-full max-w-lg list-none flex-col px-6 lg:px-12 justify-evenly gap-y-6">
    <li class="flex flex-col items-start">
      <p class="flex items-center text-xs text-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-3 h-3 mr-2">
          <path d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z" />
          <path d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z" />
        </svg>
        Email
      </p>
      <p class="text-lg text-primary">
        <a href="mailto:development@mechanikoi.com.ar" target="_blank">
          development@mechanikoi.com.ar
        </a>
      </p>
    </li>
    <li class="flex flex-col items-start">
      <p class="flex items-center text-xs text-secondary">
        <svg 
          viewBox="0 0 20 20" 
          aria-hidden="true" 
          class="h-3 w-3 fill-secondary mr-2"
        >
          <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0 0 20 3.92a8.19 8.19 0 0 1-2.357.646 4.118 4.118 0 0 0 1.804-2.27 8.224 8.224 0 0 1-2.605.996 4.107 4.107 0 0 0-6.993 3.743 11.65 11.65 0 0 1-8.457-4.287 4.106 4.106 0 0 0 1.27 5.477A4.073 4.073 0 0 1 .8 7.713v.052a4.105 4.105 0 0 0 3.292 4.022 4.095 4.095 0 0 1-1.853.07 4.108 4.108 0 0 0 3.834 2.85A8.233 8.233 0 0 1 0 16.407a11.615 11.615 0 0 0 6.29 1.84">
          </path>
        </svg>
        Twitter
      </p>
        <a class="text-lg text-primary" href="https://twitter.com/MechanikoiGames" target="_blank">
          @MechanikoiGames
        </a>
    </li>
    <li class="flex flex-col items-start">
      <p class="flex items-center text-xs text-secondary">
        <svg 
          xmlns="http://www.w3.org/2000/svg" 
          width="16" 
          height="16" 
          fill="currentColor" 
          class="bi bi-discord mr-2" 
          viewBox="0 0 16 16"
        >
          <path d="M13.545 2.907a13.2 13.2 0 0 0-3.257-1.011.05.05 0 0 0-.052.025c-.141.25-.297.577-.406.833a12.2 12.2 0 0 0-3.658 0 8 8 0 0 0-.412-.833.05.05 0 0 0-.052-.025c-1.125.194-2.22.534-3.257 1.011a.04.04 0 0 0-.021.018C.356 6.024-.213 9.047.066 12.032q.003.022.021.037a13.3 13.3 0 0 0 3.995 2.02.05.05 0 0 0 .056-.019q.463-.63.818-1.329a.05.05 0 0 0-.01-.059l-.018-.011a9 9 0 0 1-1.248-.595.05.05 0 0 1-.02-.066l.015-.019q.127-.095.248-.195a.05.05 0 0 1 .051-.007c2.619 1.196 5.454 1.196 8.041 0a.05.05 0 0 1 .053.007q.121.1.248.195a.05.05 0 0 1-.004.085 8 8 0 0 1-1.249.594.05.05 0 0 0-.03.03.05.05 0 0 0 .003.041c.24.465.515.909.817 1.329a.05.05 0 0 0 .056.019 13.2 13.2 0 0 0 4.001-2.02.05.05 0 0 0 .021-.037c.334-3.451-.559-6.449-2.366-9.106a.03.03 0 0 0-.02-.019m-8.198 7.307c-.789 0-1.438-.724-1.438-1.612s.637-1.613 1.438-1.613c.807 0 1.45.73 1.438 1.613 0 .888-.637 1.612-1.438 1.612m5.316 0c-.788 0-1.438-.724-1.438-1.612s.637-1.613 1.438-1.613c.807 0 1.451.73 1.438 1.613 0 .888-.631 1.612-1.438 1.612"/>
        </svg>
        {t("contact.discord")}
      </p>
      <p class="text-lg text-primary">
        <a href="https://discord.gg/sqzZJmKt7E ">
          MechaniKoi
        </a>
      </p>
    </li>
  </ul>
</section>